package atv;
import javax.swing.*;
/**
 *
 * @author mateus
 */
public class atv {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Pilha p = new Pilha(3);
        if(!p.full()) p.push("Julio",958675548);
        else System.out.println("Pilha cheia");
        if(!p.full()) p.push("Maria",958648658);
        else System.out.println("Pilha cheia");
        if(!p.full()) p.push("Paula",965879654);
        else System.out.println("Pilha cheia");
        if(!p.full()) p.push("Vitor",957867554);
        else System.out.println("Pilha cheia");
        System.out.println(p.top());
        String x=JOptionPane.showInputDialog("""
                                             Programa Pilha
                                             0: Sair
                                             1: Inserir itens
                                             2: Remover itens
                                             3: Imprimir Tamanho
                                             4: Imprimir Iten Topo""");
        switch (x){
            case "1": JOptionPane.showInputDialog("Programa Pilha"+
                "\n0: Sair"+
                "\n1: Inserir itens"+
                "\n2: Remover itens"+
                "\n3: Imprimir Tamanho"+
                "\n4: Imprimir Iten Topo");
        }
        
    }
    
}
