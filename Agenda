package atv;

/**
 *
 * @author mateus
 */
public class Pilha {

    private int topo;
    private int tam_max;
    private Agenda[] itens;

    public Pilha(int n) {
        itens = new Agenda[n];
        tam_max = n;
        topo = 0;
    }

    public void push(String nome, long tel) {
        itens[topo] = new Agenda(nome, tel);
        topo++;
    }

    public String top() {
        return itens[topo - 1].nome + "  " + itens[topo - 1].tel;
    }

    public boolean full() {
        return (topo == tam_max);
    }

    public void pop() {
        for (int i = 0; i < (topo - 1); i++) {
            itens[i] = itens[i + 1];
        }
        topo--;
    }

}
package atv;

public class Agenda {

    public String nome;
    public long tel;

    public Agenda(String nm, long t) {
        nome = nm;
        tel = t;
    }
}
